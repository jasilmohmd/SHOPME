<!-- main site -->
<main>

  <div class="account">
    <div class="account-head">
      <p>
        <svg xmlns="http://www.w3.org/2000/svg" height="16" width="12" viewBox="0 0 384 512"><!--!Font Awesome Free 6.5.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2023 Fonticons, Inc.--><path d="M215.7 499.2C267 435 384 279.4 384 192C384 86 298 0 192 0S0 86 0 192c0 87.4 117 243 168.3 307.2c12.3 15.3 35.1 15.3 47.4 0zM192 128a64 64 0 1 1 0 128 64 64 0 1 1 0-128z"/></svg>
        My Orders
      </p>
      <hr>
    </div>

    <div class="order-page">
      <% if(orders.length<1 || orders===false){ %>
        <div class="order-body">
          No Orders
        </div>
      <% } else { %>
        <% for(let i=0 ; i<orders.length ; i++){ %>
        <a href="/orderDetails_page?oId=<%= orders[i]._id %>">
          <div class="order-body">

            <div class="order-details">
              <div class="image">
                <% for(let j=0; j<orders[i].orderItems.length ; j++){ %>
                  <img src="<%= orders[i].orderItems[j].image[0] %>" >
                <% } %>
              </div>

              <div>
                <p>Order Id : <%= orders[i]._id %></p>
                <p>Payment Method : <%= orders[i].paymentMethod %></p>
                <p>Order Date : <%= orders[i].orderDate %></p>
              </div>
              
            </div>
  
            <div class="order-interactions">
              
            </div>
          </div>
        </a>
        <% } %>
      <% } %>

      
    </div>
    <div class="pagination" style="display: flex;gap: 30px;justify-content: center;margin-top: 10px;align-items: center;">
      <a href="/orders_page?page=<%= currentPage-3 %>&max=<%= totalPages %>">
        <div style="color: rgb(152, 151, 151);"><i class="fa-solid fa-angles-left"></i></div>
      </a>

      <a href="/orders_page?page=<%= currentPage-1 %>&max=<%= totalPages %>">
        <div style="color: rgb(152, 151, 151);"><i class="fa-solid fa-angle-left"></i></div>
      </a>

      <% if(currentPage>1){ %>
        <a href="/orders_page?max=<%= totalPages %>">
          <div style="color: rgb(152, 151, 151);">1</div>
        </a>
      <% } %>

      <div><span><%= currentPage %></span></div>

      <% if(totalPages!==currentPage){ %>
        <a href="/orders_page?page=<%= totalPages %>&max=<%= totalPages %>">
          <div style="color: rgb(152, 151, 151);"><%= totalPages %></div>
        </a>
      <% } %>

      <a href="/orders_page?page=<%= currentPage+1 %>&max=<%= totalPages %>">
        <div style="color: rgb(152, 151, 151);"><i class="fa-solid fa-angle-right"></i></div>
      </a>

      <a href="/orders_page?page=<%= currentPage+3 %>&max=<%= totalPages %>">
        <div style="color: rgb(152, 151, 151);"><i class="fa-solid fa-angles-right"></i></div>
      </a>
    </div>

</main>
<!--/ main site -->

<!-- footer -->
  <%- include("include/_footer") %>
