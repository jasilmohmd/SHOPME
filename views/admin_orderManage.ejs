<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<!-- Boxicons -->
	<link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
	<!-- My CSS -->
	<link rel="stylesheet" href="/css/admin_dash.css">
	<link rel="stylesheet" href="/css/productManage.css">

	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">

	<title>AdminHub</title>
</head>
<body>


	<!-- SIDEBAR -->
	<%- include("include/_admin_sidebar") %>
	<!-- SIDEBAR -->



	<!-- CONTENT -->
	<section id="content">
		<!-- NAVBAR -->
		<nav>
			
			<a href="#" class="notification">
				<i class='bx bxs-bell' ></i>
				<span class="num">8</span>
			</a>
			<a href="#" class="profile">
				<img src="img/people.png">
			</a>
		</nav>
		<!-- NAVBAR -->

		<!-- MAIN -->
		<main>
			<div class="head-title">
				<div class="left">
					<h1>Order Management</h1>
				</div>
				
			</div>

			<div class="container">
				<div class="container-head">
					
				</div>
				<div class="container-body">
					<% if(order==false||order.length<1){ %>
						<div style="display: flex; justify-content: center;" class="product-box">
							<p>No Orders</p>
						</div>
					<% } %>
					<% for(let i=0 ; i<order.length ; i++){ %>
						<a href="/admin/order-page?id=<%= order[i]._id %>">
							<div class="product-box">
								
								<div class="product">
									<div class="image">
										<% for(let j=0 ; j<order[i].orderItems.length ; j++){ %>
											<img src="<%= order[i].orderItems[j].image[0] %>">
										<% } %>
									</div>
		
									<div class="details">
										<p>Order Id : <%= order[i]._id %></p>
										<p>Payment Method : <%= order[i].paymentMethod %></p>
										<p>User : <%= order[i].userDetails[0].name %></p>
										<p>Email : <%= order[i].userDetails[0].email %></p>
									</div>
									
								</div>

							</div>
						</a>
					<% } %>
					
				</div>
			</div>

		</main>
		<!-- MAIN -->

	</section>
	<!-- CONTENT -->
	

	<script src="js/admin_css.js"></script>
</body>
</html>